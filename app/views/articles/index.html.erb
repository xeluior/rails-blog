<h1>Hello, Rails</h1>
<div class="d-grid gap-2">
  <% @articles.each do |article| %>
    <% unless article.archived? %>
      <div class="card">
        <div class="card-body">
          <h2 class="card-title"><%= article.title %></h2>
          <h3 class="card-subtitle"><%= article.created_at.strftime '%Y-%m-%d' %></h3>
          <p class="card-text">
            <%= truncate article.body, length: 200, seperator: /\s+/ %>
          </p>
          <%= link_to "Read More", article, class: "card-link" %>
        </div>
      </div>
    <% end %>
  <% end %>
  <%= link_to "New Article", new_article_path, class: "btn btn-primary" %>
</div>
