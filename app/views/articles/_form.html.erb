<%= form_with model: article, class: "d-grid gap-2" do |form| %>
  <div class="form-floating">
    <%= form.text_field :title, class: 'form-control form-control-lg', placeholder: "title" %>
    <%= form.label :title %>
    <% @article.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <div class="form-floating">
    <%= form.text_area :body, class: "form-control", placeholder: "content", style: "height: 200px" %>
    <%= form.label :body %>
    <% @article.errors.full_messages_for(:body).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <div>
    <%= form.label :status %>
    <%= form.select :status, Visible::VALID_STATUSES, {selected: article.status || 'public'}, {class: "form-select"} %>
  </div>
  <%= form.submit :class => "btn btn-primary" %>
<% end %>
