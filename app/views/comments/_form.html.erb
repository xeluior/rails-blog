<%= form_with model: [ @article, @article.comments.build ], class: "d-grid gap-2" do |form| %>
  <div class="form-floating">
    <%= form.text_field :commenter, class: "form-control", placeholder: "commenter" %>
    <%= form.label :commenter %><br>
  </div>
  <div class="form-floating">
    <%= form.text_area :body, class: "form-control", placeholder: "content" %>
    <%= form.label :body %><br>
  </div>
  <div>
    <%= form.label :status %>
    <%= form.select :status, Visible::VALID_STATUSES, {selected: 'public'}, {class: "form-select"} %>
  </div>
  <%= form.submit class: "btn btn-primary" %>
<% end %>
